<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            style="@style/MainActivityButton"
            android:text="@string/intercity"
            tools:text="Intercity"
            android:id="@+id/intercity"
            />

        <Button
            style="@style/MainActivityButton"
            android:text="@string/intracity"
            tools:text="Intracity"
            android:id="@+id/intracity"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityInfo"
                style="@style/MainActivityButton"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@color/border_color"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="City"/>

            <ImageButton
                android:id="@+id/nextButton"
                android:src="@raw/arrow_vector"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
